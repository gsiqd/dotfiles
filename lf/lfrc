set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id
# Basic Settings
set hidden true
set ignorecase true
set icons true
set sixel true
set rulerfmt "%d  |%a  |%p  |\033[7;31m %m \033[0m  |\033[7;33m %c \033[0m  |\033[7;35m %s \033[0m  |\033[7;34m %f \033[0m  |%i/%t"

cmd open &{{
        case $(file --mime-type -Lb $f) in
                text/*) lf -remote "send $id \$vim \$fx";;
                *) xdg-open "$f"
        esac
}}
